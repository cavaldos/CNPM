{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    /* Additional Checks */
    "noUnusedLocals": false, // Đã tắt kiểm tra biến không dùng
    "noUnusedParameters": false, // Đã tắt kiểm tra tham số không dùng
    "noImplicitReturns": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "esModuleInterop": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "test",
    "**/*.test.ts"
  ]
}